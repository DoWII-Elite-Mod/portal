---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="bg-transparent py-8">
  <div class="container mx-auto flex flex-wrap pt-4 pb-12 dark:text-zinc-100">
    <h2
      class="w-full my-2 text-5xl text-center bg-clip-text bg-gradient-to-r from-blue-500 via-purple-500 to-red-500 font-extrabold text-transparent"
    >
      {title}
    </h2>
    <slot />
  </div>
</section>
