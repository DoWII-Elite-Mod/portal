---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="bg-transparent py-8">
  <div class="container mx-auto flex flex-wrap pb-12 pt-4">
    <h2
      class="my-2 w-full bg-gradient-to-r from-blue-500 via-purple-500 to-red-500 bg-clip-text text-center text-5xl font-extrabold text-transparent"
    >
      {title}
    </h2>
    <slot />
  </div>
</section>
