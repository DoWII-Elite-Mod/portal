---
import '@/styles/globals.css';
import Footer from '@/components/astro/Footer.astro';
import Navbar from '@/components/astro/Navbar.astro';
import { AppConfig } from '@/utils/AppConfig';

export interface Props {
  head: {
    title: string;
    description: string;
  };
}

const {
  head: { title, description }
} = Astro.props;
---

<html lang="en" class="motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content={AppConfig.author} />

    <link rel="icon" type="image/x-icon" href="/favicon.svg" />

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@100;200&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="container bg-gradient-to-tl from-slate-400 via-slate-900 to-black text-gray-200"
  >
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
