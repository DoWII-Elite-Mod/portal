---
import type { Article } from '@/shared/types';
import competeIcon from '../../public/static/str_power_sword_aptit_large.png';

const { title, content, date, tournament } = Astro.props as Article;

const tournamentClass = tournament ? 'border rounded border-yellow-300' : '';
---

<article class={`relative flex flex-col p-3 ${tournamentClass}`}>
  <h2
    class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100"
  >
    <div
      class="absolute -inset-y-6 -inset-x-4 z-0 scale-95 bg-zinc-50 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 dark:bg-zinc-800/50 sm:-inset-x-6 sm:rounded-2xl"
    >
    </div>
    <a href="/eldars">
      <span
        class="absolute -inset-y-6 -inset-x-4 z-20 sm:-inset-x-6 sm:rounded-2xl"
      ></span>
      <span class="relative z-10">{title}</span>
    </a>
  </h2>
  {
    tournament ? (
      <div class="order-first flex flex-row items-center justify-between">
        <time class="relative z-10 mb-3 flex items-center text-sm text-zinc-400 dark:text-zinc-500 pl-3.5">
          <span
            class="absolute inset-y-0 left-0 flex items-center"
            aria-hidden="true"
          >
            <span class="h-4 w-0.5 rounded-full bg-zinc-200 dark:bg-zinc-500" />
          </span>
          {date}
        </time>
        <img class="h-12" src={competeIcon} />
      </div>
    ) : (
      <time class="relative z-10 mb-3 order-first flex items-center text-sm text-zinc-400 dark:text-zinc-500 pl-3.5">
        <span
          class="absolute inset-y-0 left-0 flex items-center"
          aria-hidden="true"
        >
          <span class="h-4 w-0.5 rounded-full bg-zinc-200 dark:bg-zinc-500" />
        </span>
        {date}
      </time>
    )
  }
  <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
    {content}
  </p>
  <div
    aria-hidden="true"
    class="relative z-10 mt-4 flex items-center text-sm font-medium text-teal-500 gap-2"
  >
    Read article {'>'}
  </div>
</article>
