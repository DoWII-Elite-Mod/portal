---
import Article from '@/components/Article.astro';
import Ladder from '@/components/Ladder/Ladder.astro';

const articles = Array.apply(null, Array(3)).map(_ => ({
  title: 'Lorem ipsum dolor',
  content:
    'Lorem ipsum dolor sit amet consectetur adipisicing elit. Delectus consectetur perspiciatis corrupti officia laboriosam quisquam? Ipsa tempora laborum voluptate. Explicabo temporibus repudiandae ea! Iure delectus inventore quaerat soluta nesciunt quidem.',
  date: 'September 5, 2022'
}));
---

<!-- TODO: remove margin bottom later -->
<div class="sm:px-8 mt-24 md:mt-28 mb-5">
  <div class="mx-auto max-w-7xl lg:px-8">
    <div class="relative px-4 sm:px-8 lg:px-12">
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <div
          class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2"
        >
          <div class="flex flex-col gap-16">
            {
              articles.map(({ title, content, date }) => (
                <Article title={title} content={content} date={date} />
              ))
            }
          </div>
          <Ladder />
        </div>
      </div>
    </div>
  </div>
</div>
